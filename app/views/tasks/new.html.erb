<%= form_for(@task) do |f| %>
  <table class="file">
   <td><h1>新規タスク</h1></td>
   <td><div><% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: key) %>
   <% end %></td>
    <td><%= render 'layouts/error_messages', model: f.object %>
    </td>
    <td><div><%= f.label :title,"タイトル" %></div></td>
    <td><div><%= f.text_field :title %></div></td>
    <td><div><%= f.label :description,"内容" %></div></td>
    <td><div><%= f.text_area :description %></div></td>
    <td><div><%= f.label :start,"開始日" %></div></td>
    <td><div><%= f.date_field :start %></div></td>
    <td><div><%= f.label :end,"終了日" %></div></td>
    <td><div><%= f.date_field :end %></div></td>
    <td><div><%= f.submit "作成" %></div></td>
  <td><%= link_to 'タスク一覧に戻る', tasks_path, class:"back" %></td>
  </table>
  <% end %>